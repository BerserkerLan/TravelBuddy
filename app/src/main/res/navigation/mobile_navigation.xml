<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kyoudai.travelbuddy.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_itinerary"
        android:name="com.kyoudai.travelbuddy.ui.itinerary.ItineraryFragment"
        android:label="@string/itinerary"
        tools:layout="@layout/fragment_itinerary" />

    <fragment
        android:id="@+id/navigation_expenses"
        android:name="com.kyoudai.travelbuddy.ui.budget.BudgetFragment"
        android:label="@string/expenses"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.kyoudai.travelbuddy.ui.settings.SettingFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
</navigation>